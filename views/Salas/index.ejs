<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gestión de Salas</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <style>
    .room-card {
      transition: transform 0.3s ease;
      border: none;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .room-card:hover {
      transform: translateY(-5px);
    }

    .capacity-badge {
      font-size: 0.9em;
    }
  </style>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/inicio"><i class="fas fa-film me-2"></i>CineSystem</a>
      <div class="navbar-nav">
        <% if(rol == 'admin' || rol == 'gerente' ) {%>
          <a class="nav-link" href="/users/registro"><i class="fas fa-user me-1"></i>Agregar usuario</a>
          <% } %>
            <a class="nav-link" href="/peliculas"><i class="fas fa-movie me-1"></i>Películas</a>
            <a class="nav-link active" href="/salas"><i class="fas fa-theater-masks me-1"></i>Salas</a>
            <a class="nav-link" href="/funciones"><i class="fas fa-calendar-alt me-1"></i>Funciones</a>
            <a class="nav-link" href="/clientes"><i class="fas fa-users me-1"></i>Clientes</a>
            <a class="nav-link" href="/reservas"><i class="fas fa-ticket-alt me-1"></i>Reservas</a>
            <a class="nav-link" href="/users/logout"><i class="fas fa-sign-out-alt me-1"></i>Cerrar Sesión</a>
      </div>
    </div>
  </nav>

  <div class="container my-4">
    <div class="row">
      <div class="col-12">
        <h1 class="display-5 fw-bold text-success"><i class="fas fa-theater-masks me-2"></i>Gestión de Salas</h1>
        <p class="lead">Administra las salas de proyección</p>
      </div>
    </div>

    <div class="row">
      <!-- Formulario -->
      <% if(rol=='admin' || rol=='gerente' ) { %>
        <div class="col-lg-6">
          <div class="card room-card">
            <div class="card-header bg-success text-white">
              <h4 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Agregar Nueva Sala</h4>
            </div>
            <div class="card-body">
              <form id="formSala" action="/salas/crear" method="post">
                <div class="row">
                  <div class="col-md-6 mb-3">
                    <label class="form-label">Número de Sala *</label>
                    <input type="number" name="numero" class="form-control" id="numero" required>
                  </div>
                  <div class="col-md-6 mb-3">
                    <label class="form-label">Capacidad *</label>
                    <input type="number" name="capacidad" class="form-control" id="capacidad" required>
                  </div>
                </div>

                <div class="mb-3">
                  <label class="form-label">Tipo de Sala</label>
                  <select class="form-select" name="tipo" id="tipo">
                    <option value="2D">2D Estándar</option>
                    <option value="3D">3D</option>
                    <option value="IMAX">IMAX</option>
                    <option value="VIP">VIP</option>
                    <option value="4DX">4DX</option>
                  </select>
                </div>

                <div class="mb-3">
                  <label class="form-label">Equipamiento</label>
                  <input type="text" class="form-control" id="equipamiento" name="equipamiento"
                    placeholder="Proyector 4K, Sonido Dolby, Butacas reclinables...">
                  <div class="form-text">Separar por comas cada elemento</div>
                </div>

                <button type="submit" class="btn btn-success w-100" id="btnSubmit">
                  <i class="fas fa-save me-2"></i>Guardar Sala
                </button>
              </form>
              <div class="mt-3">
                <button type="button" class="btn btn-outline-secondary w-100" onclick="limpiar()">
                  <i class="fas fa-eraser me-2"></i>Limpiar formulario
                </button>
              </div>
            </div>
          </div>
        </div>
        <% } %>

          <!-- Lista de Salas -->
          <div class="col-lg-6">
            <div class="card room-card">
              <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0"><i class="fas fa-list me-2"></i>Lista de Salas</h4>
                <div>
                  <span class="badge bg-light text-dark" id="contadorSalas">
                    <%= data.length %> salas
                  </span>
                </div>
              </div>
              <div class="card-body">
                <div class="loading-spinner text-center mb-3" id="loadingSalas">
                  <div class="spinner-border text-success" role="status">
                    <span class="visually-hidden">Cargando...</span>
                  </div>
                  <p class="mt-2">Cargando salas...</p>
                </div>
                <div id="listaSalas" class="row g-3">
                  <% if(data.length> 0) { %>
                    <% data.forEach(function(sala){ const tipoClass={ '2D' : 'bg-secondary' , '3D' : 'bg-info' , 'IMAX'
                      : 'bg-warning text-dark' , 'VIP' : 'bg-dark' , '4DX' : 'bg-danger' }[sala.tipo] || 'bg-secondary'
                      ; %>
                      <div class="card room-card">
                        <div class="card-body">
                          <div class="row align-items-center">
                            <div class="col-md-8">
                              <h5 class="card-title">
                                Sala <%= sala.numero %>
                                  <span class="badge <%= tipoClass %> ms-2">
                                    <%= sala.tipo %>
                                  </span>
                              </h5>
                              <p class="card-text mb-1">
                                <span class="badge bg-light text-dark capacity-badge">
                                  <i class="fas fa-users me-1"></i>
                                  <%= sala.capacidad %> asientos
                                </span>
                              </p>
                              <p class="card-text mb-1 small text-muted">
                                <i class="fas fa-cogs me-1"></i>
                                <%= sala.equipamiento %>
                              </p>

                              <small class="text-muted">
                                Creada: <%= new Date(sala.fecha_creacion).toLocaleDateString() %>
                              </small>
                            </div>
                            <% if(rol=='admin' || rol=='gerente' ) { %>
                              <div class="col-md-4 text-end">
                                <button class="btn btn-outline-warning btn-sm me-1"
                                  onclick="editarSala('<%= JSON.stringify(sala) %>')"><i
                                    class="fas fa-edit me-1"></i>Editar
                                </button>
                                <button type="button" onclick="elimnarNombre('<%= sala.id %>','<%= sala.numero %>')"
                                  name="Eliminar" id="eliminar" class="btn btn-outline-danger btn-sm"
                                  data-bs-toggle="modal" data-bs-target="#eliminarModal">
                                  <i class="fas fa-trash me-1"></i>Eliminar
                                </button>
                              </div>
                              <% } %>
                          </div>
                        </div>
                      </div>
                      <% }); %>
                        <% }else{ %>
                          <div class="col-12 text-center">
                            <div class="alert alert-info">
                              <i class="fas fa-info-circle me-2"></i>No hay salas registradas
                            </div>
                          </div>
                          <% } %>

                </div>
              </div>
            </div>
          </div>
    </div>
  </div>


  <div class="modal fade" id="eliminarModal" tabindex="-1" aria-labelledby="eliminarModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="eliminarModalLabel">Eliminar pelicula</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body text-center">
          ¿Estás seguro de que deseas eliminar la sala <span id="nombre" class="fw-bold">Nombre
          </span>?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          <form action="salas/eliminar/" id="formEliminar" method="post">
            <button type="submit" class="btn btn-danger">Confirmar</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      document.getElementById('loadingSalas').classList.add('d-none')
    });

    function editarSala(sala) {
      sala = JSON.parse(sala);
      document.getElementById('formSala').action = '/salas/editar/' + sala.id + '?_method=PUT';
      document.getElementById('numero').value = sala.numero;
      document.getElementById('capacidad').value = sala.capacidad;
      document.getElementById('tipo').value = sala.tipo;
      document.getElementById('equipamiento').value = sala.equipamiento;

      const btnSubmit = document.getElementById('btnSubmit');
      btnSubmit.innerHTML = '<i class="fas fa-edit me-2"></i>Actualizar sala';
    }


    const elimnarNombre = (id, nombre) => {
      document.getElementById('nombre').innerText = nombre;
      document.getElementById('formEliminar').action = `/salas/eliminar/${id}?_method=DELETE`;
    }
    const limpiar = () => {
      document.getElementById('formSala').action = '/salas/crear';
      document.getElementById('numero').value = '';
      document.getElementById('capacidad').value = '';
      document.getElementById('tipo').value = '';
      document.getElementById('equipamiento').value = '';

      const btnSubmit = document.getElementById('btnSubmit');
      btnSubmit.innerHTML = '<i class="fas fa-save me-2"></i>Guardar sala';
    }
  </script>
</body>

</html>